<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/login_bg_new">

    <ImageView
        android:id="@+id/a"
        android:layout_width="match_parent"
        android:layout_height="177dp"
        android:background="@drawable/image_money_lender_borrower"
        android:gravity="center"
        android:scaleType="fitCenter" />


    <TextView
        android:id="@+id/text_cname"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_below="@+id/a"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="TEXTO"
        android:textStyle="bold"
        android:textColor="@color/pink"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="TEXTO"
        android:id="@+id/text_cloanid"
        android:layout_below="@+id/text_cname"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="20dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/pink"
        android:layout_centerHorizontal="true"
        android:gravity="center" />


    <TextView
        android:id="@+id/text_loan_amount"
        android:layout_width="332dp"
        android:layout_height="40dp"
        android:layout_below="@+id/text_cloanid"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="Loan Amount"
        android:textColor="@color/pink"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_bal_amount"
        android:layout_width="332dp"
        android:layout_height="40dp"
        android:layout_below="@+id/text_loan_amount"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="Loan Amount"
        android:textColor="@color/pink"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/text_pay_amount"
        android:layout_width="wrap_content"
        android:layout_below="@+id/text_bal_amount"
        android:layout_height="wrap_content"
        android:hint="Enter Amount"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="20dp"
        android:textSize="18sp"
        android:textColor="#ff000000"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/text_pay_amount"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Receive"
            android:id="@+id/btn_dialog"
            android:gravity="center_vertical|center_horizontal"
            android:background="@color/colorPrimaryDark"
            android:textColor="#ffffffff" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Cancel"
            android:id="@+id/btn_dialog_cancel"
            android:layout_marginLeft="20dp"
            android:background="@color/colorPrimaryDark"
            android:textColor="#ffffffff" />
    </LinearLayout>

</RelativeLayout>
