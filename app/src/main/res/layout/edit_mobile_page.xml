<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:background="@drawable/login_bg_new">

    <ImageView
        android:id="@+id/a"
        android:layout_width="match_parent"
        android:layout_height="189dp"
        android:background="@drawable/image_money_lender_borrower"
        android:gravity="center"
        android:scaleType="fitCenter" />



    <TextView
        android:id="@+id/text_cname"
        android:layout_width="368dp"
        android:layout_height="48dp"
        android:layout_below="@+id/a"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:inputType="textMultiLine"
        android:text="Do you want to edit customer mobile number, this will affect Loan details."
        android:textColor="#ff000000"
        android:textSize="18sp" />


    <EditText
        android:id="@+id/txt_mobile"
        android:layout_width="wrap_content"
        android:layout_below="@+id/text_cname"
        android:layout_height="wrap_content"
        android:hint="Mobile Number"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="5dp"
        android:textSize="18sp"
        android:textColor="#ff000000"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/txt_mobile"
        android:layout_marginTop="20dp"
        android:gravity="center">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Update"
        android:id="@+id/btn_dialog"
        android:gravity="center_vertical|center_horizontal"
        android:background="@color/colorPrimaryDark"
        android:textColor="#ffffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Cancel"
        android:id="@+id/btn_dialog_cancel"
        android:layout_marginLeft="20dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="#ffffffff" />
    </LinearLayout>
</RelativeLayout>
