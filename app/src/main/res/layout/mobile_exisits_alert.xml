<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/login_bg_new">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:id="@+id/a"
        android:gravity="center"
        android:background="@drawable/image_money_lender_borrower"
        android:scaleType="fitCenter" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mobile Number Already Exists"
        android:id="@+id/text_cname"
        android:layout_below="@+id/a"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="20dp"
        android:textSize="18sp"
        android:textColor="#ff000000"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/text_loan_amount"
        android:layout_width="wrap_content"
        android:layout_height="62dp"
        android:layout_below="@+id/text_cname"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="25dp"
        android:gravity="center_horizontal"
        android:text="You want to add another loan details for this customer"
        android:textColor="#ff000000"
        android:textSize="18sp" />




    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Yes"
        android:id="@+id/btn_dialog"
        android:gravity="center_vertical|center_horizontal"
        android:layout_below="@+id/text_loan_amount"
        android:layout_marginBottom="20dp"
        android:background="@color/colorPrimaryDark"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffffff" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="No"
        android:id="@+id/btn_dialog_no"
        android:gravity="center_vertical|center_horizontal"
        android:layout_below="@+id/btn_dialog"
        android:layout_marginBottom="20dp"
        android:background="@color/colorPrimaryDark"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffffff" />

</RelativeLayout>
