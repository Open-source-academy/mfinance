<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/login_bg_new">

    <ImageView
        android:id="@+id/a"
        android:layout_width="match_parent"
        android:layout_height="199dp"
        android:background="@drawable/image_money_lender_borrower"
        android:gravity="center"
        android:scaleType="fitCenter" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select From Date"
        android:id="@+id/text_from_date"
        android:layout_below="@+id/a"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="20dp"
        android:textSize="18sp"
        android:textColor="#ff000000"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select To Date"
        android:id="@+id/text_to_date"
        android:layout_below="@+id/text_from_date"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="20dp"
        android:textSize="18sp"
        android:textColor="#ff000000"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal" />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Get Data"
        android:id="@+id/btn_dialog"
        android:gravity="center_vertical|center_horizontal"
        android:layout_below="@+id/text_to_date"
        android:layout_marginBottom="20dp"
        android:background="@color/colorPrimaryDark"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Cancel"
        android:id="@+id/btn_dialog_cancel"
        android:gravity="center_vertical|center_horizontal"
        android:layout_below="@+id/btn_dialog"
        android:layout_marginBottom="25dp"
        android:background="@color/colorPrimaryDark"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffffff" />

</RelativeLayout>
